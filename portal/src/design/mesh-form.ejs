<style>

	svg {
		shape-rendering: geometricPrecision;
		z-index: -1;
	  position: absolute;

		top: 0;
		right: 0;
		left: 0;
		bottom: 0;
		margin-top: 60px;
	}

	line {
		stroke: url(#gradient);
		stroke: #3c3e50;
		stroke-width: 0.1;
	}
</style>

<%
	var total = 20;

	var width = 1000;
	var height = 1000;
%>

<svg viewBox="0 0 1000 1000">
  <defs>
    <linearGradient id="gradient" x1="0%" y1="0%" x2="0%" y2="100%">
			<stop offset="0%" stop-color="#FFF"/>
      <stop offset="0%" stop-color="#FFF"/>
      <stop offset="100%" stop-color="#111"/>
    </linearGradient>
			<g id="rays">
				<line	x1="<%= 0 %>" x2="<%= width %>" y1="0" y2="<%= height %>" />
				<line	x1="<%= width %>" x2="<%= 0 %>" y1="0" y2="<%= height %>" />

				<% for (var i = 0; i < total; i++) {
					dx = i * width / total;
					dy = i * height / total; %>
					<!-- corner to side -->
					<line	x1="0" x2="<%= width %>" y1="0" y2="<%= dy %>" />
					<line	x1="<%= width %>" x2="0" y1="0" y2="<%= dy %>" />
				<% } %>

				<% for (var i = 0; i < total; i++) {
					dx = i * width / total;
					dy = i * height / total; %>
					<!-- corner to bottom -->
					<line	x1="<%= 0 %>" x2="<%= dx %>" y1="0" y2="<%= height %>" />
					<line	x1="<%= width %>" x2="<%= dx %>" y1="0" y2="<%= height %>" />
				<% } %>


			</g>
  </defs>

		<g>
			<use xlink:href="#rays" />
		</g>

</svg>
