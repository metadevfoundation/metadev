<style>

	svg {
		shape-rendering: geometricPrecision;
		z-index: -1;
	  position: absolute;

		top: 0;
		right: 0;
		left: 0;
		bottom: 0;
		margin-top: 0px;
	}

	line {
		/*stroke: url(#gradient);*/
		stroke: #e9e8e3;
		stroke-width: 0.5;
	}
</style>

<%
	var total = 75;

	var width = 1000;
	var height = 1000;
%>

<svg viewBox="0 0 1000 1000">
  <defs>
    <linearGradient id="gradient" x1="0%" y1="0%" x2="0%" y2="100%">
			<stop offset="0%" stop-color="#5151c1">
      <stop offset="100%" stop-color="#333"/>
    </linearGradient>
			<g id="rays">

				<% for (var i = 0; i < total; i++) {
					dx = i * width / total;
					dy = i * height / total; %>
					<!-- corner to side -->
					<line	x1="0" x2="<%= width %>" y1="<%= dy %>" y2="<%= dy %>" />
					<line	x1="<%= dx %>" x2="<%= dx %>" y1="0" y2="<%= height %>" />
				<% } %>

				<% for (var i = 0; i < total; i++) {
					dx = i * width / total;
					dy = i * height / total; %>
					<!-- corner to bottom -->
				<% } %>


			</g>
  </defs>

		<g>
			<use xlink:href="#rays" transform="translate(40, -180) rotate(15) translate(350, 10) scale(1.5, 1.5)" />
		</g>

</svg>
